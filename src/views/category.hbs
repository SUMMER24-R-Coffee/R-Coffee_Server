<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>category</title>
    <link rel="stylesheet" href="assets/vendors/mdi/css/materialdesignicons.min.css" />
    <link rel="stylesheet" href="assets/vendors/flag-icon-css/css/flag-icon.min.css" />
    <link rel="stylesheet" href="assets/vendors/css/vendor.bundle.base.css" />
    <link rel="stylesheet" href="assets/vendors/font-awesome/css/font-awesome.min.css" />
    <link rel="stylesheet" href="assets/vendors/bootstrap-datepicker/bootstrap-datepicker.min.css" />
    <link rel="stylesheet" href="assets/css/style.css" />
    <link rel="shortcut icon" href="assets/images/favicon.png" />
</head>

<body>
    <div class="container-scroller">
        <nav class="sidebar sidebar-offcanvas" id="sidebar">
          {{> slidebar}}
        </nav>
        <div class="container-fluid page-body-wrapper">
            <div id="theme-settings" class="settings-panel">
                <i class="settings-close mdi mdi-close"></i>
                <p class="settings-heading">SIDEBAR SKINS</p>
                <div class="sidebar-bg-options selected" id="sidebar-default-theme">
                    <div class="img-ss rounded-circle bg-light border mr-3"></div> Default
                </div>
                <div class="sidebar-bg-options" id="sidebar-dark-theme">
                    <div class="img-ss rounded-circle bg-dark border mr-3"></div> Dark
                </div>
                <p class="settings-heading mt-2">HEADER SKINS</p>
                <div class="color-tiles mx-0 px-4">
                    <div class="tiles light"></div>
                    <div class="tiles dark"></div>
                </div>
            </div>
            <div>
            {{> nav}}
            </div>
            <div class="main-panel">
                <div class="content-wrapper">
                    <div class="page-header">
                        <h3 class="page-title">Category</h3>
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/home">R'Coffee</a></li>
                                <li class="breadcrumb-item active" aria-current="page"> Category </li>
                            </ol>
                        </nav>
                    </div>
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex justify-content-end mb-2">
                                <button class="btn btn-primary btn-fw" data-toggle="modal" data-target="#category-modal" data-mode="add">Add Category</button>
                            </div>
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th class="p-2 text-center">Name</th>
                                            <th class="p-2 text-center">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each categories}}
                                        <tr>
                                            <td>{{sum 1 @index }}</td>
                                            <td class="p-2 text-center w-100">{{name}}</td>
                                            <td>
                                                <button class="btn btn-primary btn-icon-text mx-auto update-category-btn" data-toggle="modal" data-target="#category-modal" data-mode="update" data-category-id="{{this.category_id}}" data-category-name="{{this.name}}" style="margin-bottom: 10px; width: 90px;" >Edit<i class="mdi mdi-file-check btn-icon-append"></i></button>
                                            </td>
                                        </tr>
                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <!--modal category-->
                    <div class="modal fade" id="category-modal" tabindex="-1" aria-labelledby="categoryModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-lg">
                            <div class="modal-content card col-md-6 mx-auto">
                                <div class="modal-header card-body">
                                    <h4 class="card-title mb-0" id="categoryModalLabel">Add Category</h4>
                                    <button type="button" class="btn-close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                </div>
                                <div class="modal-body">
                                    <form id="category-form" action="/category/insert-category" method="POST">
                                        <div class="card">
                                            <div class="card-body">
                                                <div class="form-group row mb-0">
                                                    <label class="col-sm-3 col-form-label">Category</label>
                                                    <div class="col-sm-9">
                                                        <input type="text" class="form-control" name="name" id="category-name" />
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row d-flex justify-content-center align-items-center mt-2">
                                            <button type="submit" class="ml-2 btn btn-danger btn-icon-text"><i class="mdi mdi-upload btn-icon-prepend"></i> Save</button>
                                            <button type="button" class="ml-2 btn btn-warning btn-icon-text" data-dismiss="modal"><i class="mdi mdi-close"></i> Cancel</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div>
                    {{> footer}}
                </div>
            </div>
            <!-- main-panel ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!--notification-->
    <div>
        {{> notification}}
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="assets/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- inject:js -->
    <script src="assets/js/off-canvas.js"></script>
    <script src="assets/js/hoverable-collapse.js"></script>
    <script src="assets/js/misc.js"></script>
    <!-- endinject -->
    <script src="assets/js/image-preview-single.js"></script>
    <script src="assets/js/notification.js"></script>
    <script src="assets/js/delete-category.js"></script>
    <script src="assets/js/category-form.js"></script>
    <!-- Custom js for this page -->
    <script src="assets/js/dashboard.js"></script>
    <!-- End custom js for this page -->

    <!-- Custom JavaScript -->
</body>
</html>
